    <script>
        // Set today's date as default
        document.getElementById('noticeDate').valueAsDate = new Date();
        
        function generateNotice() {
            const form = document.getElementById('noticeForm');
            const formData = new FormData(form);
            
            // Update preview with form data
            document.getElementById('previewNumber').textContent = formData.get('noticeNumber') || '______';
            document.getElementById('previewDate').textContent = formatDate(formData.get('noticeDate')) || '______';
            document.getElementById('previewOwner').textContent = formData.get('ownerName') || '______';
            document.getElementById('previewWard').textContent = formData.get('wardName') || '______';
            document.getElementById('previewWardInContent').textContent = formData.get('wardName') || '......................................................................';
            document.getElementById('previewProperty').textContent = formData.get('propertyNumber') || '______';
            document.getElementById('previewSurvey').textContent = formData.get('surveyNumber') || '......';
            document.getElementById('previewRef1').textContent = formData.get('referenceNumber1') || '______';
            document.getElementById('previewRef2').textContent = formData.get('referenceNumber2') || '______';
            document.getElementById('previewComplaintRef').textContent = formData.get('complaintReference') || '........';
            document.getElementById('previewPreviousNotice').textContent = formData.get('previousNoticeReference') || '.........';
            document.getElementById('previewCopy1').textContent = formData.get('copyTo1') || '______';
            document.getElementById('previewCopy2').textContent = formData.get('copyTo2') || '______';
            
            // Add animation
            const preview = document.getElementById('noticePreview');
            preview.classList.remove('animate-in');
            setTimeout(() => {
                preview.classList.add('animate-in');
            }, 10);
        }
        
        function formatDate(dateString) {
            if (!dateString) return '';
            const date = new Date(dateString);
            return date.toLocaleDateString('en-GB'); // DD/MM/YYYY format
        }
        
        function printNotice() {
            const printWindow = window.open('', '_blank');
            const noticeContent = document.getElementById('noticePreview').innerHTML;
            
            printWindow.document.write(`
                <!DOCTYPE html>
                <html>
                <head>
                    <title>തിരുവനന്തപുരം നഗരസഭ - അറിയിപ്പ്</title>
                    <meta charset="UTF-8">
                    <style>
                        body {
                            font-family: 'Noto Sans Malayalam', Arial, sans-serif;
                            line-height: 1.8;
                            padding: 40px;
                            color: #000;
                        }
                        .highlight {
                            background: none;
                            font-weight: bold;
                            text-decoration: underline;
                        }
                        @media print {
                            body { margin: 0; padding: 20px; }
                        }
                    </style>
                </head>
                <body>
                    ${noticeContent}
                </body>
                </html>
            `);
            
            printWindow.document.close();
            setTimeout(() => {
                printWindow.print();
            }, 250);
        }
        
        // Real-time updates
        document.getElementById('noticeForm').addEventListener('input', generateNotice);
        
        // Generate initial preview
        generateNotice();
    </script>
</body>
</html>
